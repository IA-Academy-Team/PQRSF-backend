{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "lib": ["es2020", "esnext"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    // "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "generated/prisma/**/*.ts"],
  "exclude": ["node_modules"]
}
